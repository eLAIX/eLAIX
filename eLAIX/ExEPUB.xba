	oStream = GetExportFileObject(gsExportZipDir &amp; &quot;/META-INF/container.xml&quot;)
	oStream.writeString(&quot;&lt;?xml version=&quot;&quot;1.0&quot;&quot; encoding=&quot;&quot;utf-8&quot;&quot;?&gt;&quot; &amp; gsCR)
