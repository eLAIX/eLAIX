					ExportEpubParagraph(oPara)
				end if	
				goDlgExport.Model.lblCountWrite.Label = oPara.ID
			next i
			
			if iChapterNo &lt; iCount then
				if gaDocChapter(iChapterNo + 1).PageID = iPage then
					iChapterNo = iChapterNo + 1
				else 
					exit do
				end if
			else
