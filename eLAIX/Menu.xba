	&apos;xray oStructure
	goDlgCheck.getControl(&quot;chkSyncOutlines&quot;).Enable = oStructure.State = 1
	goDlgCheck.getControl(&quot;chkEmptyHeadings&quot;).Enable = oStructure.State = 1
