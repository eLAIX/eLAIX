function GetDocMetaData() as object
dim oMetadata as object

	oMetadata = createObject(&quot;Metadata&quot;)
	with oMetadata
		.docTitle = GetInternalDocString(&quot;elaixDocTitle&quot;)
		.docDescription = GetInternalDocString(&quot;elaixDocDescription&quot;)
		.docLanguage = GetInternalDocString(&quot;elaixDocLanguage&quot;)
		.docKeywords = GetInternalDocString(&quot;elaixDocKeywords&quot;)
		.docAuthors = GetInternalDocString(&quot;elaixDocAuthors&quot;)
		.docCopyright = GetInternalDocString(&quot;elaixDocCopyright&quot;)
		.propOutlineNumbering = GetInternalDocString(&quot;elaixPropOutlineNumbering&quot;)
	end with
	GetDocMetaData = oMetadata
end function


sub SetDocMetadata (oMetadata as object)
	SetInternalDocString(&quot;elaixDocTitle&quot;, oMetadata.docTitle)
	SetInternalDocString(&quot;elaixDocDescription&quot;, oMetadata.docDescription)
	SetInternalDocString(&quot;elaixDocLanguage&quot;,  oMetadata.docLanguage)
	SetInternalDocString(&quot;elaixDocKeywords&quot;,  oMetadata.docKeywords)
	SetInternalDocString(&quot;elaixDocAuthors&quot;,  oMetadata.docAuthors)
	SetInternalDocString(&quot;elaixDocCopyright&quot;,  oMetadata.docCopyright)
	SetInternalDocString(&quot;elaixPropOutlineNumbering&quot;,  oMetadata.propOutlineNumbering)
end sub


function GetMetaDataFromForm(oMetadata as object) as object
dim oForm As object
dim Ctl As object
dim i as integer
dim vName as string
dim oMetadata as object

	oMetaData = createObject(&quot;Metadata&quot;)
	if ThisComponent().DrawPage.Forms.Count &gt; 0 then
		oForm = ThisComponent().DrawPage.Forms.GetByIndex(0)
		if oForm.Count &gt; 1 then
			for i = 0 to oForm.Count - 1
				Ctl = oForm.GetByIndex(i)
				if Ctl.Name &lt;&gt; &quot;butOK&quot; then
					vName = Ctl.Name
					Select case vName
						case &quot;Titel&quot; : oMetadata.docTitle = Ctl.Text
						case &quot;Kommentar&quot; : oMetadata.docDescription = Ctl.Text
						case &quot;Schlagworte&quot; : oMetadata.docKeywords = Ctl.Text
						case &quot;Sprache&quot; : vName = oMetadata.docLanguage = Ctl.Text
						case &quot;AutorName&quot; : vName = oMetadata.docAuthors = Ctl.Text
					end select
				else
					exit for
				end if  
			next i
		end if  
	end if  
	GetMetaDataFromForm = oMetadata
end function


sub DocMetadata()
dim oMetadata as object
dim oDlgFilename as object
dim oMetaDlg as object
dim vShowDialog as boolean

	oMetaData = createObject(&quot;Metadata&quot;)
	oMetadata = GetDocMetaData()
	vShowDialog = true

	if oMetaData.docLanguage = &quot;&quot; then  &apos;no metadata in doc
		&apos; this might be an old eLAIX document
		if IsOldElaixDocType then 
			oMetaData = GetMetaDataFromForm(oMetadata)  &apos; read metadata with Doc-&gt;SetMetaDataForm
			SetDocMetadata(oMetadata)
			vShowDialog = UpgradeOldElaixDocType()  &apos;= true if user decided to upgrade
		else  &apos;a non-eLAIX document -&gt; just open dialog with blank fields
			vShowDialog = true
		end if 
	end if	

	if vShowDialog then
		&apos;initialize dialog and elements
		DialogLibraries.LoadLibrary(&quot;eLAIX&quot;)
		oMetaDlg = CreateUnoDialog( DialogLibraries.eLAIX.DlgMeta )	
		
		oMetaDlg.Title = &quot;Edit Document Metadata&quot;
		oMetaDlg.getControl(&quot;edtDocTitle&quot;).SetText(oMetaData.docTitle)
		oMetaDlg.getControl(&quot;edtDocDescription&quot;).SetText(oMetaData.docDescription)
		oMetaDlg.getControl(&quot;cmbDocLanguage&quot;).SetText(oMetaData.docLanguage)
		oMetaDlg.getControl(&quot;edtDocKeywords&quot;).SetText(oMetaData.docKeywords)
		oMetaDlg.getControl(&quot;edtDocAuthors&quot;).SetText(oMetaData.docAuthors)
		oMetaDlg.getControl(&quot;edtDocCopyright&quot;).SetText(oMetaData.docCopyright)
		oMetaDlg.getControl(&quot;chkPropOutlineNumbering&quot;).State = (oMetaData.propOutlineNumbering)

		if oMetaDlg.execute() = 1 then
			oMetaData.docTitle = oMetaDlg.getControl(&quot;edtDocTitle&quot;).Text
			oMetaData.docDescription = oMetaDlg.getControl(&quot;edtDocDescription&quot;).Text
			oMetaData.docLanguage = oMetaDlg.getControl(&quot;cmbDocLanguage&quot;).Text
			oMetaData.docKeywords = oMetaDlg.getControl(&quot;edtDocKeywords&quot;).Text
			oMetaData.docAuthors = oMetaDlg.getControl(&quot;edtDocAuthors&quot;).Text
			oMetaData.docCopyright = oMetaDlg.getControl(&quot;edtDocCopyright&quot;).Text
			oMetaData.propOutlineNumbering = oMetaDlg.getControl(&quot;chkPropOutlineNumbering&quot;).State
			SetDocMetadata(oMetadata)
		end if			
	end if	
end sub



sub DocCheck()
dim oGraphic as object
dim oControl as object
dim sPath as string
dim sImgPath as string
dim oMetadata as object
dim oStructure as object
dim oSyncOutlines as object
dim oEmptyHeadings as object
dim oDoubleSpaces as object
dim oTabulators as object
dim oTabToSpaceCount as object
dim vTabToSpaceCount as integer
dim oStatus as object
dim vState as integer

	if IsOldElaixDocType then UpgradeOldElaixDocType()
	
	&apos;initialize dialog and elements
	DialogLibraries.LoadLibrary( &quot;eLAIX&quot; )
	goDlgCheck = CreateUnoDialog( DialogLibraries.eLAIX.DlgCheck )		
	sPath = GetPackageDirURL(&quot;vnd.harryboldt.elaix&quot;)  
	sImgPath = sPath &amp; &quot;/icons/check.png&quot;
	oControl = goDlgCheck.getControl(&quot;imgLogo&quot;)
	oControl.getModel().ImageURL = ConvertToURL( sImgPath )

	&apos;setting the dialog elements
	oMetadata = goDlgCheck.getControl(&quot;chkMetadata&quot;)
	oStructure = goDlgCheck.getControl(&quot;chkStructure&quot;)
	oSyncOutlines = goDlgCheck.getControl(&quot;chkSyncOutlines&quot;)
	oEmptyHeadings = goDlgCheck.getControl(&quot;chkEmptyHeadings&quot;)
	oDoubleSpaces = goDlgCheck.getControl(&quot;chkDoubleSpaces&quot;)
	oTabulators = goDlgCheck.getControl(&quot;chkTabulators&quot;)
	oTabToSpaceCount = goDlgCheck.getControl(&quot;txtTabToSpaceCount&quot;)
	oStatus = goDlgCheck.getControl(&quot;txtStatus&quot;)
	oStatus.Text = &quot;Please select check-options and then start the document check and optimizing.&quot;
	
	&apos;get check-setting from document
	oMetadata.State = GetInternalDocString(&quot;eLAIXCheckMetadata&quot;)
	oStructure.State = GetInternalDocString(&quot;eLAIXCheckStructure&quot;)
	oSyncOutlines.State = GetInternalDocString(&quot;eLAIXCheckSyncOutlines&quot;)
	oEmptyHeadings.State = GetInternalDocString(&quot;eLAIXCheckEmptyHeadings&quot;)
	oDoubleSpaces.State = GetInternalDocString(&quot;eLAIXCheckDoubleSpaces&quot;)
	oTabulators.State = GetInternalDocString(&quot;eLAIXCheckTabulators&quot;)
	vTabToSpaceCount = GetInternalDocString(&quot;eLAIXCheckTabToSpaceCount&quot;)
	if vTabToSpaceCount &gt; 0 then 
		oTabToSpaceCount.Text = vTabToSpaceCount
	else
		oTabToSpaceCount.Text = 4
	end if	

	goDlgCheck.execute	
end sub

